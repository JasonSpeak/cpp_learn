@{
    ViewData["Title"] = "注册";
}
<div class="container">
    <header>
        <h2>@ViewData["Title"]</h2>
        <h3>@ViewBag.message</h3>
    </header>
        <div class="col-lg-4 col-md-4 col-sm-12">
            <form class="bs-example bs-example-form" role="form">
                <table>
                    <tr>
                        <td>
                            <div class="input-group" style="margin-top: 10px">
                                <span class="input-group-addon">昵称:</span>
                                <input type="text" class="form-control">
                                
                            </div>
                        </td>
                        <td></td>
                    </tr>
                    
                    <tr>
                        <td>
                            <div class="input-group" style="margin-top: 10px">
                                <span class="input-group-addon">邮箱:</span>
                                <input type="email" class="form-control" placeholder="xxxxxx@gmail.com">
                            </div>
                        </td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            <div class="input-group" style="margin-top: 10px">
                                <span class="input-group-addon">性别:</span>
                                <select name="sex" id="sex" class="form-control">
                                    <option value="男">男</option>
                                    <option value="女">女</option>
                                    <option value="保密" select="selected">保密</option>
                                </select>
                            </div>
                        </td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            <div class="input-group" style="margin-top: 10px">
                                <span class="input-group-addon">密码:</span>
                                <input type="password" class="form-control" id="passwd">
                            </div>
                        </td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            <div class="input-group" style="margin-top: 10px">
                                <span class="input-group-addon">确认:</span>
                                <input type="password" class="form-control" id="passwdAgain" onkeyup="checkpw()">
                            </div>
                        </td>
                        <td>
                            &nbsp;&nbsp;<span id="note"></span>
                        </td>
                    </tr>
                </table>
                <input type="submit" value="注册" id="submit" style="margin-top: 10px" class="btn btn-default">
            </form>

        </div>
</div>   
<script type="text/javascript">
    function checkpw()
    {
        var pw=document.getElementById("passwd").value;
        var pwAgain=document.getElementById("passwdAgain").value;
        if(pw==pwAgain)
        {
            document.getElementById("note").innerHTML="<font color='green'>OK!</font>";
            document.getElementById("submit").disabled=false;
        }
        else
        {
            document.getElementById("note").innerHTML="<font color='red'>Wrong！</font>";
            document.getElementById("submit").disabled=true;
        }
    }
</script>