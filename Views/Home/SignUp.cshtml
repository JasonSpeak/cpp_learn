@{
    ViewData["Title"] = "注册";
}
@model dotnetcoretest1.Models.SignUpModel
<div class="container">
    <header>
        <h2>@ViewData["Title"]</h2>
        <h3>@ViewBag.message</h3>
    </header>
        <div class="col-lg-4 col-md-4 col-sm-12">
            <form  asp-controller="Home" asp-action="SignUp" method="post"> 
                <div class="form-group" style="margin-top: 10px">
                    <span>昵称</span>
                    <input type="text" class="form-control" asp-for="userName">
                    <span asp-validation-for="userName" style="color:red"></span>
                </div>
                <div class="form-group" style="margin-top: 10px">
                    <span>邮箱</span>
                    <input type="email" class="form-control" placeholder="xxxxxx@gmail.com" asp-for="userEmail">
                    <span asp-validation-for="userEmail" style="color:red"></span>
                </div>
                <div class="form-group" style="margin-top: 10px">
                    <span>性别</span>
                    <select asp-for="userSex" class="form-control" >
                        <option value="男">男</option>
                        <option value="女">女</option>
                        <option value="保密">保密</option>
                    </select>
                    <span asp-validation-for="userSex" style="color:red"></span>
                </div>
                <div class="form-group" style="margin-top: 10px">
                    <span>密码</span>
                    <input type="password" class="form-control" asp-for="userPw">
                    <span asp-validation-for="userPw" style="color:red"></span>
                </div>
                <div class="form-group" style="margin-top: 10px">
                    <span>确认</span>
                    <input type="password" class="form-control" asp-for="passwdAgain">
                    <span asp-validation-for="passwdAgain" style="color:red"></span>
                </div>
                <p>
                    <button type="submit" class="btn btn-default btn-success">注　册</button>
                </p>
            </form>

        </div>
</div>   
<script type="text/javascript">
    function checkpw()
    {
        var pw=document.getElementById("passwd").value;
        var pwAgain=document.getElementById("passwdAgain").value;
        if(pw==pwAgain)
        {
            document.getElementById("note").innerHTML="<font color='green'>OK!</font>";
            document.getElementById("submit").disabled=false;
        }
        else
        {
            document.getElementById("note").innerHTML="<font color='red'>Wrong！</font>";
            document.getElementById("submit").disabled=true;
        }
    }
</script>
